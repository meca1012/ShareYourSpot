<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Groups" >

    <Button
        android:id="@+id/btn_PostList"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_toRightOf="@+id/btn_newgroup"
        android:onClick="showSpots"
        android:text="@string/title_activity_post_list" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_enterGroupName"
        android:layout_toRightOf="@+id/editText_enterGroupName"
        android:text="@string/search" />

    <Button
        android:id="@+id/btn_newgroup"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_PostList"
        android:layout_alignBottom="@+id/btn_PostList"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:onClick="newGroup"
        android:text="@string/new_group" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_enterGroupName"
        android:layout_below="@+id/editText_enterGroupName"
        android:layout_marginTop="20dp"
        android:text="@string/your_groups"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editText_enterGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_newgroup"
        android:layout_below="@+id/btn_PostList"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="@string/enter_name" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/list_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp" >
    </ListView>

</RelativeLayout>