<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editText_enter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="79dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:hint="@string/enter_text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_comment"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_enter_text"
        android:layout_toRightOf="@+id/editText_enter_text"
        android:text="@string/comment" />

    <RatingBar
        android:id="@+id/ratingBar_post_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_enter_text"
        android:layout_below="@+id/btn_comment" />

    <ImageView
        android:id="@+id/imageView_load_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_comment"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView_spotter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="59dp"
        android:text="@string/spotter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_spot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_enter_text"
        android:layout_alignTop="@+id/imageView_load_picture"
        android:text="@string/spot_text" />

</RelativeLayout>