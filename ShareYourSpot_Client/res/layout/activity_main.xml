<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShareYourSpot" >

    <Button
        android:id="@+id/btn_restTester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="restTester"
        android:text="RestTester" />

    <Button
        android:id="@+id/btn_mapTester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_restTester"
        android:layout_alignLeft="@+id/btn_restTester"
        android:layout_alignRight="@+id/btn_restTester"
         android:onClick="mapTester"
        android:text="@string/map" />

    <Button
        android:id="@+id/camTakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_mapTester"
        android:layout_alignLeft="@+id/btn_mapTester"
        android:layout_alignRight="@+id/btn_mapTester"
        android:onClick="camTester"
        android:text="@string/camTakePicture" />

    <TextView
        android:id="@+id/loginBtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loginBtnLogin"
        android:layout_alignBottom="@+id/loginBtnLogin"
        android:layout_alignRight="@+id/loginPassword"
        android:clickable="true"
        android:onClick="registerAction"
        android:text="@string/registration"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/loginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginUsername"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:text="@string/login"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/loginBtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginPassword"
        android:layout_below="@+id/loginPassword"
        android:layout_marginTop="29dp"
        android:onClick="loginAction"
        android:text="@string/login" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginUsername"
        android:layout_below="@+id/loginUsername"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/loginUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/camTakePicture"
        android:layout_below="@+id/loginLabel"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="@string/username" >

        <requestFocus />
    </EditText>

</RelativeLayout>